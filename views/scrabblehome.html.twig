<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="css/styles.css">
        <link href='http://fonts.googleapis.com/css?family=Lora:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
        <title>Scrabble</title>
    </head>
    <body>
        <div class='container'>
            <div class="bg-form">
                <div class="form-container">
                <h1 class='logo'>Scrabble Word Score!</h1>
                {% if result is not empty %}
                    {% if result == 0 %}
                        <h3>Please enter one valid word</h3>
                    {% else %}
                        <h3>Your score is: {{ result }}</h3>
                    {% endif %}
                {% endif %}


                    <form action="/score_check" class="form-group">
                            <div class="form-group">
                                <label for="word">Enter your Scrabble word to check its value:</label>
                                <input id="word" name="word" class="form-control" type="text" placeholder="Enter Scrabble Word">
                            </div>
                            <button type="submit" class="btn btn-danger btn-lg">Submit</button>
                        </form>
                </div>
            </div>
        </div>
    </body>
</html>
